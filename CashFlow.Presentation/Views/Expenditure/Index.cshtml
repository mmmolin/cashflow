@model List<CashFlow.Core.Entities.Expenditure>
<nav class="actionnav">
    <a asp-action="Create">+</a>
</nav>
<main class="main-content">
    @{
        <div class="flex-table">
            <div class="flex-row">
                <div>ID</div>
                <div>Description</div>
                <div>Amount</div>
            </div>

            @foreach (var expenditure in Model)
            {
                <div class="flex-row">
                    <div>@expenditure.Id</div>
                    <div>@expenditure.Description</div>
                    <div>@expenditure.Amount</div>
                </div>
            }

        </div>



    }
</main>

